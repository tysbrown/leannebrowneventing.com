
			{% for post in postslist | reverse %}
			{% if post.url == url %} data-current="current item"{% endif %}
			<div class="container mt-5">
				<div class="row d-flex justify-content-center">
					<div class="col-lg-8 d-flex justify-content-center align-items-center flex-column">
						<div class="container">
							<div class="row">
								<div class="col-lg-8 text-center white-text mb-2 justify-content-center p-3 green darken-4 rounded-top">
									{% if post.data.title %}
									{{ post.data.title }}
									{% else %}
									Untitled
									{% endif %}
								</div>
							</div>
							<div class="row">
								<div class="col-lg-8 mb-2">
									<time datetime="{{ post.date | machineDate }}">
										<small>{{ post.date | readableDate }} by <a href="/authors/{{ post.data.author | slug }}/">{{ post.data.author }}</a></small>
									</time>
								</div>
							</div>
							<div class="row">
								<div class="col-lg-8 mb-2">
									{% if post.data.summary %}
									{{ post.data.summary }}
									{% endif %}
								</div>
							</div>
							<div class="row">
								<div class="col-lg-8 d-flex justify-content-between">
									<div class="container">
										<button class="btn btn-dark-green text-white" href="{{ post.url | url }}">READ POST</button>
									</div>
									<div class="container">
										{% if post.data.tags %}
										{% for tag in post.data.tags %}
										{%- if tag != "post" -%}
										{% set tagUrl %}/tags/{{ tag }}/{% endset %}
										<a href="{{ tagUrl | url }}" rel="tag" class="green lighten-2 p-2 small text-uppercase">{{ tag }}</a>
										{%- endif -%}
										{% endfor %}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			</div>
			{% endif %}
			{% endfor %}







