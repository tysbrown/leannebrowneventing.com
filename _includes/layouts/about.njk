---
layout: layouts/base.njk
section: about
permalink: /about/index.html
---
<header class="pageparallax">
    <div class="container page-header">
        <div class="row align-items-center">
            <div class="col-12 text-center">
                <h1 class="responsive-header greatvibes hero-header white-text wow fadeIn" data-wow-duration="5s" style="line-height:600px;">About <span style="color: #4caf50">Me</span></h1>
            </div>
        </div>
    </div>
</header>
<div class="container my-3">
    <div class="row">
        <div class="col-lg-12">
            <a href="/" class="black-text" style="text-decoration: underline;">Home</a> > About
        </div>
    </div>
</div>
<!-- INTRO -->
<div class="container" style="margin-top:100px;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="five-rem five-rem-responsive font-weight-bold">I am in the business of <span class="green-text">personal development.</span> I help
                clients learn more about themselves by interacting with horses.</h1>
        </div>
    </div>
</div>
<div class="container-fluid grey lighten-4">
<div class="container" style="margin-top:200px;margin-bottom:100px;">
    <div class="row d-flex justify-content-between">
        <div class="col-lg-6">
            <img src="/static/img/aboutimage1.png" alt="leanne with degree" class="img-fluid" width="100%">
        </div>
        <div class="col-lg-5 d-flex flex-column justify-content-center">
            <h3 class="h3-responsive font-weight-bold mt-xl-0 mt-lg-3 mt-md-3 mt-sm-3 mt-3">
                I have a Bachelors in <span class="green-text">Equine Science</span> from University College Dublin.
            </h3>
            <p>
                {{ overviewtext }}
            </p>
        </div>
    </div>
</div>
</div>
<!-- INTRO END -->
<!-- NEWS EXCERPT -->
<div class="container" style="margin-top:100px;">
    <div class="row">
        <div class="col-lg-12 p-3">
            <h1 class="h1-responsive font-italic text-center">
                "Congratulations to our equestrian coaches who participated at Majestic Oaks in Ocala last week. Leanne Brown
                lead the team, earning two first-place and two second-place finishes."
            </h1>
            <a href="https://www.montverde.org/news-detail?fromId=286109&pk=1353724" class="nav-link text-right black-text" style="text-decoration:underline">-MVA News</a>
        </div>
    </div>
</div>
<!-- NEWS EXCERPT END -->
<!-- SKILLS -->
<div class="container-fluid grey lighten-4">
<div class="container p-xl-0 p-lg-0 p-md-2 p-sm-2 p-2" style="margin-top:200px;margin-bottom:100px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="greatvibes text-left responsive-header subheadingsize mb-5">Skills</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mt-xl-0 mt-lg-0 mt-md-5 mt-sm-5 mt-5">
                <div class="container-fluid">
                    <div class="row justify-content-start">
                        <i class="fas fa-award fa-5x green-text"></i>
                    </div>
                    <h3 class="h3-responsive font-weight-bold mt-4 mb-2">{{ skills.heading1 }}</h3>
                    <div class="row">
                        {{ skills.text1 }}
                    </div>
                </div>
            </div>
            <div class="col-md-4 mt-xl-0 mt-lg-0 mt-md-5 mt-sm-5 mt-5">
                <div class="container-fluid">
                    <div class="row justify-content-start">
                        <i class="fas fa-brain fa-5x green-text"></i>
                    </div>
                    <h3 class="h3-responsive font-weight-bold mt-4 mb-2">{{ skills.heading2 }}</h3>
                    <div class="row">
                        {{ skills.text2 }}
                    </div>
                </div>
            </div>
            <div class="col-md-4 mt-xl-0 mt-lg-0 mt-md-5 mt-sm-5 mt-5">
                <div class="container-fluid">
                    <div class="row justify-content-start">
                        <i class="fas fa-check fa-5x green-text"></i>
                    </div>
                    <h3 class="h3-responsive font-weight-bold mt-4 mb-2">{{ skills.heading3 }}</h3>
                    <div class="row">
                        {{ skills.text3 }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<!-- SKILLS END -->
<!-- WORK HISTORY -->
<div class="container p-xl-0 p-lg-0 p-md-2 p-sm-2 p-2">
<div class="container-fluid" style="margin-top:100px;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="greatvibes text-right responsive-header subheadingsize mb-5">Work History</h1>
        </div>
    </div>
    <div class="row d-flex justify-content-between">
        <div class="col-lg-6">
            <img src="{{ workhistory.mvaimage }}" alt="{{ workhistory.mvaalt }}" class="img-fluid rounded-lg" width="100%">
        </div>
        <div class="col-lg-5 d-flex flex-column justify-content-center">
            <h3 class="h3-responsive font-weight-bold green-text mb-0 mt-xl-0 mt-lg-3 mt-md-3 mt-sm-3 mt-3">Montverde Academy</h3>
            <h5 class="h5-responsive">Equine Coach</h5>
            <p>
                {{ workhistory.mvatext }}
            </p>
        </div>
    </div>
    <div class="row d-flex justify-content-between mt-5">
        <div class="col-lg-5 d-flex flex-column justify-content-center">
            <h3 class="h3-responsive font-weight-bold green-text mb-0">Ardeo Sport Horses</h3>
            <h5 class="h5-responsive">Marketing & Barn Manager</h5>
            <p>
                {{ workhistory.ardeotext }}
            </p>
        </div>
        <div class="col-lg-6">
            <img src="{{ workhistory.ardeoimage }}" alt="{{ workhistory.ardeoalt }}" class="img-fluid rounded-lg" width="100%">
        </div>
    </div>
</div>
</div>
<!-- WORK HISTORY END -->



