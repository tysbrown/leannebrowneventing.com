
			{% for post in postslist | reverse %}
			{% if post.url == url %} data-current="current item"{% endif %}
			<div class="container mt-5">
				<div class="row">
					<div class="col-lg-12">
						<h1 class="h1-responsive">
						{% if post.data.title %}
						{{ post.data.title }}
						{% else %}
						Untitled
						{% endif %}
						</h1>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-12 mb-2">
						<time datetime="{{ post.date | machineDate }}">
							<small>{{ post.date | readableDate }} by <a href="/authors/{{ post.data.author | slug }}/">{{ post.data.author }}</a></small>
						</time>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-12 mb-2">
						{% if post.data.summary %}
						{{ post.data.summary }}
						{% endif %}
					</div>
				</div>
				<div class="row">
					<div class="col-lg-12 d-flex">
						<div class="container flex-1">
							<button class="btn btn-dark-green text-white" href="/blog/{{ post.url | url }}">READ POST</button>
						</div>
						<div class="container flex-1 d-flex justify-content-end">
							{% if post.data.tags %}
							{% for tag in post.data.tags %}
							{%- if tag != "post" -%}
							{% set tagUrl %}/tags/{{ tag }}/{% endset %}
							<div class="p-1 green rounded-pill px-3" style="height: 35px;">
								<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
							</div>
							{%- endif -%}
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
			{% endif %}
			{% endfor %}









