<!-- CONTACT FORM -->
<section class="container mt-5 white rounded z-depth-3 wow fadeInUp">
  <div class="row">
    <div class="col-md-8 p-5">
      <form id="contactform" name="contactform" method="POST" data-netlify="true">
        <div class="row">
          <div class="col-md-6">
            <div class="md-form">
              <input type="text" id="firstname" name="FirstName" class="form-control">
              <label for="firstname">First Name</label>
              <small class="firstnamestatus red-text"></small>
            </div>
          </div>
          <div class="col-md-6">
            <div class="md-form">
              <input type="text" id="lastname" name="LastName" class="form-control">
              <label for="lastname">Last Name</label>
              <small class="lastnamestatus red-text"></small>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="md-form">
              <input type="text" id="email" name="Email" class="form-control">
              <label for="email">Email Address</label>
              <small id="emailmessage" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
          </div>
          <div class="col-md-6">
            <div class="md-form">
              <input type="text" id="email2" name="Email2" class="form-control">
              <label for="email2">Re-Enter Email Address</label>
              <small class="nomatch emailstatus red-text"></small>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="md-form">
              <input type="text" id="subject" name="Subject" class="form-control">
              <label for="subject">Subject</label>
              <small class="subjectstatus red-text"></small>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="md-form">
              <textarea type="text" id="message" name="Message" rows="10" class="form-control md-textarea"></textarea>
              <label for="message">Message</label>
              <small class="messagestatus red-text"></small>
            </div>
          </div>
        </div>
      </form>
      <a type="submit" class="btn btn-green" onclick="validateForm();">Send</a>
    </div>
    <div class="col-md-4 green darken-4 py-5">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <i class="fas fa-4x fa-envelope text-white"></i>
            <hr class="my-4 white">
            <p class="font-italic text-white" style="font-size:35px;">
              Are you in need of an experienced trainer? I am currently accepting new clients in the greater Orlando area.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- CONTACT FORM END -->
