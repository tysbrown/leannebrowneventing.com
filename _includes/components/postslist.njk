{% for post in postslist | reverse %}
{% if post.url == url %} data-current="current item"{% endif %}
<div class="container p-3 mt-5 mx-3 white rounded z-depth-3">
	<div class="row">
		<div class="col-lg-12">
			<h1 class="h1-responsive">
				{% if post.data.title %}
				{{ post.data.title }}
				{% else %}
				Untitled
				{% endif %}
			</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12 mb-2">
			<time datetime="{{ post.date | machineDate }}">
				<small>{{ post.date | readableDate }} by <a href="/authors/{{ post.data.author | slug }}/">{{ post.data.author }}</a></small>
			</time>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12 mb-2">
			{% if post.data.summary %}
			{{ post.data.summary }}
			{% endif %}
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12 d-flex">
			<div class="container flex-1">
				<a class="btn btn-dark-green text-white" href="{{ post.url | url }}">READ POST</a>
			</div>
			<div class="container flex-1 d-flex justify-content-end align-items-end">
				{% if post.data.tags %}
				{% for tag in post.data.tags %}
				{%- if tag != "post" -%}
				{% set tagUrl %}/tags/{{ tag }}/{% endset %}
				<div class="p-1 green rounded-pill px-3 m-1" style="height: 35px;">
					<a href="{{ tagUrl | url }}" rel="tag" class="black-text">{{ tag }}</a>
				</div>
				{%- endif -%}
				{% endfor %}
			</div>
		</div>
	</div>
</div>
{% endif %}
{% endfor %}









