<div class="container my-3">
	<div class="row">
		<div class="col-lg-12">
			<a href="/" class="black-text">Home</a> > Blog Index
		</div>
	</div>
</div>
{% for post in postslist | reverse %}
{% if post.url == url %} data-current="current item"{% endif %}
<div class="container white rounded z-depth-3 mb-3">
	<div class="row">
		<div class="col-lg-12 green darken-2 white-text p-3 rounded-top">
			<h1 class="h1-responsive my-0">
				<a href="{{ post.url | url }}" class="white-text">
					{% if post.data.title %}
					{{ post.data.title }}
					{% else %}
					Untitled
					{% endif %}
				</a>
			</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<time datetime="{{ post.date | machineDate }}">
				<small>{{ post.date | readableDate }} by <a href="/authors/{{ post.data.author | slug }}/" class="black-text font-weight-bold">{{ post.data.author }}</a></small>
			</time>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12 mb-3">
			{% if post.data.summary %}
			{{ post.data.summary }}
			{% endif %}
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12 mb-2">
			<a class="black-text" href="{{ post.url | url }}" style="text-decoration:underline;">Continue Reading...</a>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12 p-2 green darken-2 d-flex justify-content-start rounded-bottom">
				{% if post.data.tags %}
				{% for tag in post.data.tags %}
				{%- if tag != "post" -%}
				{% set tagUrl %}/tags/{{ tag }}/{% endset %}
				<div class="p-1 green rounded-pill px-3 m-1" style="height: 35px;">
					<a href="{{ tagUrl | url }}" rel="tag" class="black-text">{{ tag }}</a>
				</div>
				{%- endif -%}
				{% endfor %}
		</div>
	</div>
</div>
{% endif %}
{% endfor %}












