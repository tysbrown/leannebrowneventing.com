<!-- CONTACT FORM -->
<section class="container wow fadeInUp">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="responsive-header subheadingsize text-center font-weight-bolder greatvibes">Get in Touch</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 p-4 mx-xl-0 mx-lg-0 mx-md-2 mx-sm-2 mx-2 green darken-4 rounded-top">
      <i class="fas fa-4x fa-envelope text-white"></i>
      <h5 class="h5-responsive white-text mt-3">
        Let's start a conversation
      </h5>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 p-4 mx-xl-0 mx-lg-0 mx-md-2 mx-sm-2 mx-2 white z-depth-3 rounded-bottom">
      <form id="contactform" name="contactform" method="POST" data-netlify="true">
        <div class="row">
          <div class="col-lg-6">
            <div class="md-form">
              <input type="text" id="firstname" name="FirstName" class="form-control">
              <label for="firstname">First Name</label>
              <small class="firstnamestatus red-text"></small>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="md-form">
              <input type="text" id="lastname" name="LastName" class="form-control">
              <label for="lastname">Last Name</label>
              <small class="lastnamestatus red-text"></small>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-6">
            <div class="md-form">
              <input type="text" id="email" name="Email" class="form-control">
              <label for="email">Email Address</label>
              <small id="emailmessage" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="md-form">
              <input type="text" id="email2" name="Email2" class="form-control">
              <label for="email2">Re-Enter Email Address</label>
              <small class="nomatch emailstatus red-text"></small>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <div class="md-form">
              <input type="text" id="subject" name="Subject" class="form-control">
              <label for="subject">Subject</label>
              <small class="subjectstatus red-text"></small>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <div class="md-form">
              <textarea type="text" id="message" name="Message" rows="10" class="form-control md-textarea"></textarea>
              <label for="message">Message</label>
              <small class="messagestatus red-text"></small>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <button type="submit" class="btn btn-green" onclick="validateForm();">Send</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>
<!-- CONTACT FORM END -->
