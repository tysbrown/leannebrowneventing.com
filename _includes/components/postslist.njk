
			{% for post in postslist | reverse %}
			{% if post.url == url %} data-current="current item"{% endif %}
			<div class="container white rounded z-depth-3 justify-content-center p-3 my-3">
				<div class="row">
					<div class="col-lg-8 text-center white-text mb-1">
						{% if post.data.title %}
						{{ post.data.title }}
						{% else %}
						Untitled
						{% endif %}
					</div>
				</div>
				<div class="row">
					<div class="col-lg-8 mb-2">
						<time datetime="{{ post.date | machineDate }}">
							<small>{{ post.date | readableDate }} by <a href="/authors/{{ post.data.author | slug }}/">{{ post.data.author }}</a></small>
						</time>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-8 mb-2">
						{% if post.data.summary %}
						{{ post.data.summary }}
						{% endif %}
					</div>
				</div>
				<div class="row">
					<div class="col-lg-8 justify-content-between">
						<div class="container">
							<button class="btn btn-dark-green text-white" href="{{ post.url | url }}">READ POST</button>
						</div>
						<div class="container">
							<a href="{{ tagUrl | url }}" rel="tag" class="green lighten-2 p-2 small text-uppercase">{{ tag }}</a>
						</div>
					</div>
				</div>
			</div>




