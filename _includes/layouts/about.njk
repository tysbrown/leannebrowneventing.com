                    <div class="row wow fadeInUp" data-wow-delay="0.4s">
                        {{ skills.text2 }}
                    </div>
                </div>
            </div>
            <div class="col-md-4 mt-xl-0 mt-lg-0 mt-md-5 mt-sm-5 mt-5">
                <div class="container-fluid">
                    <div class="row justify-content-start">
                        <i class="fas fa-check fa-5x green-text wow fadeInRight" data-wow-delay="0.2s"></i>
                    </div>
                    <h3 class="h3-responsive font-weight-bold mt-4 mb-2 wow fadeInRight" data-wow-delay="0.3s">{{ skills.heading3 }}</h3>
                    <div class="row wow fadeInRight" data-wow-delay="0.3s">
                        {{ skills.text3 }}
                    </div>
                </div>
            </div>
