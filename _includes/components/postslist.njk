<div class="container mt-3 mb-5">
	<div class="row">
		<div class="col-lg-12">
			<a href="/" class="black-text" style="text-decoration: underline;">Home</a> > Blog Index
		</div>
	</div>
</div>
{% for post in postslist | reverse %}
{% if post.url == url %} data-current="current item"{% endif %}
<div class="container p-xl-0 p-lg-0 p-md-2 p-sm-2 p-2">
<div class="container white rounded z-depth-3 mb-3">
	<div class="row">
		<div class="col-lg-3">
			<a href="{{ post.url | url }}">
				<img src="{{ image }}" width="100%" alt="{{ alt }}">
			</a>
		</div>
		<div class="col-lg-9">
			{% if post.data.title %}
			<h1 class="h1-responsive">
					{{ post.data.title }}
					{% else %}
					Untitled
			</h1>
			{% endif %}
			<time datetime="{{ post.date | machineDate }}">
				<small>{{ post.date | readableDate }} by <a href="/authors/{{ post.data.author | slug }}/" class="black-text font-weight-bold mb-3">{{ post.data.author }}</a></small>
			</time>
			{% if post.data.summary %}
			<p>
				{{ post.data.summary }}
			</p>
			{% endif %}
			<p>
				<a class="black-text" href="{{ post.url | url }}" style="text-decoration:underline;">Continue Reading...</a>
			</p>
			<div class="container p-0">
				<div class="row">
					{% if post.data.tags %}
					{% for tag in post.data.tags %}
					<div class="col-lg-12 d-flex">
						{%- if tag != "post" -%}
						{% set tagUrl %}/tags/{{ tag }}/{% endset %}
						<div class="px-3 green darken-2 rounded-pill m-1" style="height: 25px;">
							<a href="{{ tagUrl | url }}" rel="tag" class="white-text font-smaller">{{ tag }}</a>
						</div>
					</div>
					{%- endif -%}
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
</div>
</div>
{% endif %}
{% endfor %}